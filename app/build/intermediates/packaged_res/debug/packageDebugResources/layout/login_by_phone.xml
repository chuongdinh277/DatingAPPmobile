<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFDBED">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <ImageButton
            android:id="@+id/welcomeBack"
            android:layout_width="50dp"
            android:layout_height="54dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:background="@null"
            android:contentDescription="Back"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/left_arrow" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="341dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="64dp"
            app:srcCompat="@drawable/capture" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Đăng nhập với số điện thoại"
            android:textColor="#800D42"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Phone Number Input -->
        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="336dp"
            android:layout_height="60dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="36dp"
            android:background="@drawable/bg_btn_phone"
            android:gravity="center_vertical"
            android:hint="Nhập vào sđt"
            android:inputType="phone"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:textColorHint="#800D42"
            android:textSize="16sp" />

        <!-- Send Code Button -->
        <Button
            android:id="@+id/btnSendCode"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="36dp"
            android:background="@drawable/bg_btn_mail"
            android:text="Gửi mã xác minh"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Verification Code Input (Initially Hidden) -->
        <EditText
            android:id="@+id/etVerificationCode"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="36dp"
            android:background="@drawable/bg_btn_phone"
            android:gravity="center_vertical"
            android:hint="Enter verification code"
            android:inputType="number"
            android:maxLength="6"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:textColorHint="#800D42"
            android:textSize="16sp"
            android:visibility="gone" />

        <!-- Verify Code Button (Initially Hidden) -->
        <Button
            android:id="@+id/btnVerifyCode"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="36dp"
            android:background="@drawable/bg_btn_mail"
            android:text="Verify Code"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <!-- Login Button (Initially Hidden) -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="36dp"
            android:background="@drawable/bg_btn_phone"
            android:text="Login"
            android:textColor="#800D42"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <!-- Quota Error Message (Initially Hidden) -->
        <TextView
            android:id="@+id/tvQuotaError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="36dp"
            android:background="@drawable/bg_error_message"
            android:gravity="center"
            android:padding="16dp"
            android:text="SMS verification quota exceeded. Please try again later or use email login."
            android:textColor="#D32F2F"
            android:textSize="14sp"
            android:visibility="gone" />

        <!-- Alternative Login Message (Initially Hidden) -->
        <TextView
            android:id="@+id/tvAlternativeLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="36dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="Try email login or contact support for assistance"
            android:textColor="#666666"
            android:textSize="12sp"
            android:visibility="gone" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

        <!-- Login Link -->
        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            android:text="Đã có tài khoản? Đăng nhập"
            android:textColor="#800D42"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
