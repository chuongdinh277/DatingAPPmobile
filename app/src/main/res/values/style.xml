<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomPasswordInput" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">#9B004E</item>
        <item name="hintTextColor">#FFFFFFFF</item>
        <item name="android:textColorHint">#FFFFFFFF</item>
        <item name="boxStrokeColor">#FFFFFFFF</item>

    </style>

    <style name="CustomCalendarTheme" parent="android:Widget.Material.CalendarView">
        <item name="android:weekDayTextAppearance">@style/CustomCalendarTheme.WeekDay</item>
        <item name="android:dateTextAppearance">@style/CustomCalendarTheme.Date</item>
    </style>

    <style name="CustomCalendarTheme.WeekDay" parent="android:TextAppearance.Material.Small">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#B0004B</item>
    </style>

    <style name="CustomCalendarTheme.Date" parent="android:TextAppearance.Material.Medium">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#333333</item>
    </style>
</resources>