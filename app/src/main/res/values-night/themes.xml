<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark Theme -->
    <style name="Base.Theme.CoupleApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Status Bar cho dark theme -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation Bar cho dark theme - Tránh phần màu đen -->
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>

        <!-- Edge-to-edge display -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fitsSystemWindows">false</item>

        <!-- Tránh màu đen khi keyboard xuất hiện -->
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Theme.CoupleApp" parent="Base.Theme.CoupleApp" />

    <!-- Theme cho các Activity fullscreen -->
    <style name="Theme.CoupleApp.Fullscreen" parent="Theme.CoupleApp">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="p">shortEdges</item>
    </style>
</resources>