<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_pink"
    tools:context=".activities.SettingProfileActivity">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_pink"
            android:padding="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            app:tint="#E91E63"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textSize="22sp"
            android:textColor="#E91E63"
            android:textStyle="bold"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="116dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="35dp"
            android:layout_toEndOf="@+id/tv_title"
            android:contentDescription="Edit"
            android:padding="16dp"
            android:src="@drawable/ic_edit"
            app:tint="#E91E63" />
    </RelativeLayout>

    <!-- Avatar Section -->
    <FrameLayout
        android:id="@+id/avatar_container"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/user_icon"
            app:civ_border_color="#F472B6"
            app:civ_border_width="3dp" />

        <ImageView
            android:id="@+id/iv_edit_avatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_pen"
            android:background="@drawable/avatar_edit_icon_background"
            android:padding="8dp"
            android:layout_gravity="bottom|end"
            app:tint="@color/white" />
    </FrameLayout>

    <!-- Info Fields -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/bt_save_changes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avatar_container">

        <LinearLayout
            android:id="@+id/layout_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="32dp"
            android:paddingBottom="24dp">

            <!-- Username -->
            <TextView
                style="@style/ProfileLabel"
                android:text="Biệt danh" />

            <EditText
                android:id="@+id/et_username"
                style="@style/ProfileEditText.Editable"
                android:hint="Your name" />

            <!-- Date of Birth -->
            <TextView
                style="@style/ProfileLabel"
                android:text="Ngày sinh nhật của bạn" />

            <EditText
                android:id="@+id/et_dob"
                style="@style/ProfileEditText.Editable"
                android:hint="dd/MM/yyyy" />

            <!-- Gender -->
            <TextView
                style="@style/ProfileLabel"
                android:text="Giới tính" />

            <RadioGroup
                android:id="@+id/rg_gender"
                style="@style/ProfileEditText.Editable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                android:paddingStart="0dp"
                android:paddingEnd="0dp">

                <RadioButton
                    android:id="@+id/rb_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nam" />

                <RadioButton
                    android:id="@+id/rb_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="Nữ" />

                <RadioButton
                    android:id="@+id/rb_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="Khác" />
            </RadioGroup>

            <!-- Start Love Date -->
            <TextView
                style="@style/ProfileLabel"
                android:text="Ngày bắt đầu yêu" />

            <EditText
                android:id="@+id/et_start_love_date"
                style="@style/ProfileEditText.Editable"
                android:hint="dd/MM/yyyy" />

            <!-- Email (Display Only) -->
            <TextView
                style="@style/ProfileLabel"
                android:text="Email" />

            <EditText
                android:id="@+id/et_email"
                style="@style/ProfileEditText.Disabled"
                android:hint="Your email" />

            <!-- Phone Number (Display Only) -->
            <TextView
                style="@style/ProfileLabel"
                android:text="Số điện thoại" />

            <EditText
                android:id="@+id/et_phone"
                style="@style/ProfileEditText.Disabled"
                android:hint="Your phone number" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_save_changes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="70dp"
        android:backgroundTint="#FF7EB3"
        android:padding="15dp"
        android:text="Lưu thay đổi"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
