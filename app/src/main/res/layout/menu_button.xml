<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu_button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <FrameLayout
        android:id="@+id/baseContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center_horizontal"
        android:paddingBottom="5dp">

        <LinearLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/rounded_toolbar"
            android:clipToOutline="true"
            android:elevation="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp">

            <LinearLayout
                android:id="@+id/llPlan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Lịch trình">
                <ImageView
                    android:id="@+id/btnPlan"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_task"
                    app:tint="@color/bottom_nav_item_tint" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llGallery"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Tin nhắn">
                <ImageView
                    android:id="@+id/btnGallery"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_chat"
                    app:tint="@color/bottom_nav_item_tint" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Trang chủ">
                <ImageView
                    android:id="@+id/btnHome"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_home"
                    app:tint="@color/bottom_nav_item_tint" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llGame"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Trò chơi">
                <ImageView
                    android:id="@+id/btnGame"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_game"
                    app:tint="@color/bottom_nav_item_tint" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSettings"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Cài đặt">
                <ImageView
                    android:id="@+id/btnSettings"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_settings"
                    app:tint="@color/bottom_nav_item_tint" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>