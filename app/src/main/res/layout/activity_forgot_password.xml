<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFDBED">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="42dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:background="@null"
            android:contentDescription="Back"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/left_arrow" />

        <!-- Logo/Image -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="64dp"
            app:srcCompat="@drawable/capture" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Quên mật khẩu"
            android:textColor="#800D42"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            android:gravity="center"
            android:text="Nhập số điện thoại của bạn để nhận mã xác nhận"
            android:textColor="#800D42"
            android:textSize="16sp" />

        <!-- Phone Number Input -->
        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="36dp"
            android:background="@drawable/bg_btn_phone"
            android:gravity="center_vertical"
            android:hint="Số điện thoại"
            android:inputType="phone"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:textColorHint="#800D42"
            android:textSize="16sp" />

        <!-- Send Code Button -->
        <Button
            android:id="@+id/btnSendCode"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="36dp"
            android:background="@drawable/bg_btn_mail"
            android:text="Gửi mã xác nhận"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Verification Code Input (Initially Hidden) -->
        <EditText
            android:id="@+id/etVerificationCode"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="36dp"
            android:background="@drawable/bg_btn_phone"
            android:gravity="center_vertical"
            android:hint="Mã xác nhận"
            android:inputType="number"
            android:maxLength="6"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:textColorHint="#800D42"
            android:textSize="16sp"
            android:visibility="gone" />

        <!-- New Password Input (Initially Hidden) -->
        <EditText
            android:id="@+id/etNewPassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="36dp"
            android:background="@drawable/bg_btn_phone"
            android:gravity="center_vertical"
            android:hint="Mật khẩu mới (tối thiểu 6 ký tự)"
            android:inputType="textPassword"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:textColorHint="#800D42"
            android:textSize="16sp"
            android:visibility="gone" />

        <!-- Confirm Password Input (Initially Hidden) -->
        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="36dp"
            android:background="@drawable/bg_btn_phone"
            android:gravity="center_vertical"
            android:hint="Xác nhận mật khẩu mới"
            android:inputType="textPassword"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:textColorHint="#800D42"
            android:textSize="16sp"
            android:visibility="gone" />

        <!-- Verify and Reset Button (Initially Hidden) -->
        <Button
            android:id="@+id/btnVerifyAndReset"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="36dp"
            android:background="@drawable/bg_btn_mail"
            android:text="Xác nhận và đổi mật khẩu"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

        <!-- Back to Login Link -->
        <TextView
            android:id="@+id/tvBackToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            android:text="Quay lại đăng nhập"
            android:textColor="#800D42"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
