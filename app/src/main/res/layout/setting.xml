<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    tools:context=".activities.SettingActivity">

    <TextView
        android:id="@+id/tv_settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-black"
        android:text="Settings"
        android:textColor="#FF65A3"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_profile"
        style="@style/Widget.Material3.Button.OutlinedButton.Icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical|start"
        android:paddingLeft="20dp"
        android:paddingTop="12dp"
        android:paddingRight="48dp"
        android:paddingBottom="12dp"
        android:text="@string/profile"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:backgroundTint="#FE6CA9"
        app:cornerRadius="10dp"
        app:icon="@drawable/user_icon"
        app:iconPadding="16dp"
        app:iconTint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/bt_about"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_settings_title"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintVertical_chainStyle="packed"
        app:strokeWidth="0dp" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_chevron_right"
        app:layout_constraintBottom_toBottomOf="@+id/bt_profile"
        app:layout_constraintEnd_toEndOf="@+id/bt_profile"
        app:layout_constraintTop_toTopOf="@+id/bt_profile"
        app:tint="@android:color/white"
        tools:ignore="ContentDescription" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_about"
        style="@style/Widget.Material3.Button.OutlinedButton.Icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical|start"
        android:paddingLeft="20dp"
        android:paddingTop="12dp"
        android:paddingRight="48dp"
        android:paddingBottom="12dp"
        android:text="@string/about"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:backgroundTint="#FE6CA9"
        app:cornerRadius="10dp"
        app:icon="@drawable/about_icon"
        app:iconPadding="16dp"
        app:iconTint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/bt_link_google"
        app:layout_constraintEnd_toEndOf="@+id/bt_profile"
        app:layout_constraintStart_toStartOf="@+id/bt_profile"
        app:layout_constraintTop_toBottomOf="@+id/bt_profile"
        app:strokeWidth="0dp" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_chevron_right"
        app:layout_constraintBottom_toBottomOf="@+id/bt_about"
        app:layout_constraintEnd_toEndOf="@+id/bt_about"
        app:layout_constraintTop_toTopOf="@+id/bt_about"
        app:tint="@android:color/white"
        tools:ignore="ContentDescription" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_link_google"
        style="@style/Widget.Material3.Button.OutlinedButton.Icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical|start"
        android:paddingLeft="20dp"
        android:paddingTop="12dp"
        android:paddingRight="48dp"
        android:paddingBottom="12dp"
        android:text="Liên kết Google"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:backgroundTint="#FE6CA9"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_google"
        app:iconPadding="16dp"
        app:iconTint="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/bt_profile"
        app:layout_constraintStart_toStartOf="@+id/bt_profile"
        app:layout_constraintTop_toBottomOf="@+id/bt_about"

        app:layout_constraintBottom_toTopOf="@+id/switch_theme" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_chevron_right"
        app:layout_constraintBottom_toBottomOf="@+id/bt_link_google"
        app:layout_constraintEnd_toEndOf="@+id/bt_link_google"
        app:layout_constraintTop_toTopOf="@+id/bt_link_google"
        app:tint="@android:color/white"
        tools:ignore="ContentDescription" />


    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_theme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_pink_rounded"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical|start"
        android:paddingLeft="20dp"
        android:paddingTop="12dp"
        android:paddingRight="20dp"
        android:paddingBottom="12dp"
        android:text="Chế độ Tối"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/bt_profile"
        app:layout_constraintStart_toStartOf="@+id/bt_profile"
        app:layout_constraintTop_toBottomOf="@+id/bt_link_google"
        app:layout_constraintBottom_toTopOf="@+id/bt_logout" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Đăng xuất"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:backgroundTint="#FE6CA9"
        app:cornerRadius="10dp"
        app:iconTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bt_profile"

        app:layout_constraintHorizontal_bias="0.294"
        app:layout_constraintStart_toStartOf="@+id/bt_profile"
        app:layout_constraintTop_toBottomOf="@+id/switch_theme"
        app:layout_constraintVertical_bias="0.0"
        app:strokeWidth="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>