<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý liên kết tài khoản"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvCurrentProviders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đang tải..."
        android:textSize="16sp"
        android:padding="16dp"
        android:background="@drawable/rounded_background"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Liên kết thêm phương thức đăng nhập:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btnLinkGoogle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📧 Liên kết tài khoản Google"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/google_blue"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnLinkPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📱 Liên kết số điện thoại"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/phone_green"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hủy liên kết phương thức đăng nhập:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btnUnlinkGoogle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="❌ Hủy liên kết Google"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/error_red"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnUnlinkPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="❌ Hủy liên kết số điện thoại"
        android:textSize="16sp"
        android:padding="16dp"
        android:backgroundTint="@color/error_red"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⚠️ Lưu ý: Bạn phải giữ ít nhất một phương thức đăng nhập"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:background="@color/warning_yellow"
        android:textColor="@color/black" />

</LinearLayout>
