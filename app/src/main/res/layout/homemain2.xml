<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HomeMain2Fragment"
    android:background="@drawable/background_home"
    android:paddingBottom="70dp">

    <include
        android:id="@+id/headerTop"
        layout="@layout/layout_header" />

    <FrameLayout
        android:id="@+id/heartContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_transparent_panel"
        android:elevation="6dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerTop"
        app:layout_constraintBottom_toTopOf="@id/layoutUserInfo">

        <ImageView
            android:id="@+id/heartImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/heart_with_border" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"

            android:translationY="-25dp">

            <TextView
                android:id="@+id/tvTogether"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã bên nhau"
                android:textColor="#FFFFFF"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDaysCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/pacifico"
                android:text="1234 ngày"
                android:textColor="#FFFFFF"
                android:textSize="42sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSince"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Từ 01/01/2022"
                android:textColor="#FFFFFF"
                android:textSize="19sp" />
        </LinearLayout>

    </FrameLayout>

    <include
        android:id="@+id/layoutUserInfo"
        layout="@layout/user_profile_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>